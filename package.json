{
  "name": "redisfx",
  "version": "1.0.0",
  "description": "FXServer to Redis communication via node-redis",
  "repository": {
    "type": "git",
    "url": "https://github.com/m3ftwz/redisfx.git"
  },
  "bugs": "https://github.com/m3ftwz/redisfx/issues",
  "author": "m3ftwz",
  "license": "LGPL-3.0",
  "type": "module",
  "main": "lib/Redis.js",
  "types": "lib/Redis.d.ts",
  "files": [
    "lib/Redis.js",
    "lib/Redis.d.ts"
  ],
  "scripts": {
    "build": "bun build:root && lerna run build",
    "build:root": "node build.js && cd lib && tsc",
    "watch": "esbuild --watch --bundle --platform=node --target=node16.9.1 src/index.ts --outfile=dist/build.js",
    "lib": "tsc --project lib/tsconfig.lib.json",
    "bootstrap": "lerna bootstrap",
    "postinstall": "bun bootstrap"
  },
  "dependencies": {
    "redis": "^5.10.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@citizenfx/server": "2.0.5132-1",
    "@types/node": "^22.7.4",
    "esbuild": "^0.21.5",
    "lerna": "^4.0.0",
    "prettier": "^3.3.3",
    "pretty-quick": "^3.3.1",
    "typescript": "^5.6.2"
  }
}